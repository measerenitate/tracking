{{#if @isVertical}}
  <Forms::Slider::Vertical
    @entry={{@entry}}
    @onUpdate={{fn this.updateRange @entry.name}}
    @label={{this.label}}
    @currentValue={{this.currentValue}}
    data-test-forms-pairs-entry={{@entry.name}}
    ...attributes />
{{else}}
  <Forms::Slider::Horizontal
    @entry={{@entry}}
    @onUpdate={{fn this.updateRange @entry.name}}
    @label={{this.label}}
    @currentValue={{this.currentValue}}
    data-test-forms-pairs-entry={{@entry.name}}
    ...attributes />
{{/if}}
